                        <div class="row">
                            <div class="form-group mt-3">
                                <label name="ApplicationID" class="control-label">Application ID</label>
                                <input name="searchString" placeholder="Search By Application ID" class="form-control form-control-user" />
                            </div>
                        </div>
                        <div class="row">
                            <div asp-validation-summary="All" class="text-danger validateAll"></div>
