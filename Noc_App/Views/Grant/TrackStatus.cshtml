
@{
    ViewBag.Title = "Track Application Status";
    Layout = "~/Views/HomeLanding/_HomeLayout.cshtml";
}
<main id="main">
    <section id="contact" class="contact">
        <div class="container">

            <div class="section-title">
                <h2>Track Application Status</h2>
