                                            <div class="col-lg-12">
                                                <div class="card-header py-3">
                                                    <h6 class="m-0 font-weight-bold text-primary">Master Plan Details</h6>
                                                </div>
                                                <div class="card-body">
                                                    <div class="row">
                                                        <div class="col-lg-6">
                                                            <div class="form-group">
                                                                <label asp-for="UnderMasterPlan" class="control-label"></label>
                                                                <input asp-for="UnderMasterPlan" readonly class="form-control form-control-user" />
                                                            </div>
                                                        </div>
                                                        @if (Model.IsUnderMasterPlan)
                                                        {
                                                            <div class="col-lg-6">
                                                                <div class="form-group">
                                                                    <label asp-for="MasterPlanName" class="control-label"></label>
                                                                    <input asp-for="MasterPlanName" readonly class="form-control form-control-user" />
                                                                </div>
                                                            </div>
                                                        }
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
