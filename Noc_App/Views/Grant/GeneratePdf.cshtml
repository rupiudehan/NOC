                                                                <input asp-for="VillageName" readonly class="form-control form-control-user" />
                                                            </div>
                                                            <div class="form-group">
                                                                <label asp-for="Pincode" class="control-label"></label>
                                                                <input asp-for="Pincode" readonly class="form-control form-control-user" />
                                                            </div>
                                                            <div class="form-group">
                                                                <label asp-for="PlanSanctionAuthorityName" class="control-label"></label>
                                                                <input asp-for="PlanSanctionAuthorityName" readonly class="form-control form-control-user" />
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
