    <script src="@Model.Domain/landingpage/assets/vendor/swiper/swiper-bundle.min.js"></script>
    @* <script src="@Model.Domain/landingpage/assets/vendor/php-email-form/validate.js"></script> *@

    <!-- Template Main JS File -->
    <script src="@Model.Domain/landingpage/assets/js/main.js"></script>

