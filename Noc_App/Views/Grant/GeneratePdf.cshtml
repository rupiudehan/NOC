                                                                    <label asp-for="ApplicantEmailID" class="control-label"></label>
                                                                    <input asp-for="ApplicantEmailID" readonly class="form-control form-control-user" />
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <div class="card-header py-3">
                                                        <h6 class="m-0 font-weight-bold text-primary">Application Detail</h6>
                                                    </div>
                                                    <div class="card-body">
                                                        <div class="row">
                                                            <div class="col-lg-6">
                                                                <div class="form-group">
                                                                    <label asp-for="ApplicationID" class="control-label">Application ID</label>
                                                                    <input asp-for="ApplicationID" readonly class="form-control form-control-user" />
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            @if (!Model.IsUnderMasterPlan)
                                            {
                                                <div class="row">
                                                    <div class="col-lg-12">
                                                        <div class="card-header py-3">
                                                            <h6 class="m-0 font-weight-bold text-primary">Payment Detail</h6>
                                                        </div>
                                                        <div class="card-body">
                                                            @if (Model.PaymentOrderId != "0")
                                                            {
                                                                <div class="row">
                                                                    <div class="col-lg-6">
                                                                        <div class="form-group">
                                                                            <label asp-for="Amount" class="control-label">Amount</label>
                                                                            <input asp-for="Amount" readonly class="form-control form-control-user" />
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-lg-6">
                                                                        <div class="form-group">
                                                                            <label asp-for="ReceiptNo" class="control-label">Receipt No</label>
                                                                            <input asp-for="ReceiptNo" readonly class="form-control form-control-user" />
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            }
                                                            else
                                                            {
                                                                <div class="row">
                                                                    <div class="col-lg-6">
                                                                        <div class="form-group">
                                                                            <label name="PaymentOrderId" class="control-label">Payment</label>
                                                                            <input name="PaymentOrderStatus" readonly class="form-control form-control-user" value="Pending" />
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                        <div class="row">
                                            <div class="card-body">
                                                <div class="row">
                                                    <div class="col-sm-8 offset-sm-4">
                                                        <div class="row">
                                                            <div class="col-sm-1 offset-sm-2">
                                                                <button type="button" class="btn btn-success btn-user btn-block" id="printButton">Print</button>
                                                            </div>
                                                            <div class="col-sm-2">
                                                                <a class="btn btn-secondary btn-user btn-block" asp-action="Create" asp-controller="Grant" id="backButton">Back</a>
                                                                @* <button type="button" asp-action="Create" asp-controller="Grant" class="btn btn-secondary btn-user btn-block" id="backButton">Back</button> *@
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                @* </form> *@
                            }
                            else
                            {
                                <table class="table table-striped">
                                    <tr>
                                        <th colspan="3" style="color:red;font-weight:bold;">No record found</th>
                                    </tr>
                                </table>
                            }
                        </div>

                    </div>

                </div>
            </section>

        </main>
    </div>

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <script src="@Model.Domain/vendor/jquery/jquery.min.js"></script>
