                                                        </div>
                                                        <div class="card-body">
                                                            <div class="row">
                                                                <div class="col-lg-6">
                                                                    <div class="form-group">
                                                                        <label asp-for="NocPermissionTypeName" class="control-label"></label>
                                                                        <input asp-for="NocPermissionTypeName" readonly class="form-control form-control-user" />
                                                                    </div>
                                                                </div>
                                                                <div class="col-lg-6">
                                                                    <div class="form-group">
                                                                        <label asp-for="NocTypeName" class="control-label"></label>
                                                                        <input asp-for="NocTypeName" readonly class="form-control form-control-user" />
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            @if (Model.NocTypeName.ToUpper() != "NEW")
                                                            {
                                                                <div class="row">
                                                                    <div class="col-lg-6">
                                                                        <div class="form-group">
                                                                            <label asp-for="NocNumber" class="control-label"></label>
                                                                            <input asp-for="NocNumber" readonly class="form-control form-control-user" />
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-lg-6">
                                                                        <div class="form-group">
                                                                            <label asp-for="PreviousDate" class="control-label"></label>
                                                                            <input asp-for="PreviousDate" readonly class="form-control form-control-user" />
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                            }
