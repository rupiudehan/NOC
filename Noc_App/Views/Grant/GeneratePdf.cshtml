    <script src="@Model.Domain/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Vendor JS Files -->
    <script src="@Model.Domain/landingpage/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
