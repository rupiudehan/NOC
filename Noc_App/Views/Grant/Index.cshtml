@model GrantViewModel
@{
    ViewBag.Title = "Application of Grant for NOC Detail";
    Layout = "~/Views/HomeLanding/_HomeLayout.cshtml";
}
<h1 style="text-align:center" class="h3 mb-4 text-gray-800">Application Detail</h1>
<div class="row">

    <div class="col-lg-12" style="text-align:center" >

        <!-- Circle Buttons -->
        <form class="user" method="post">
            <div class="card shadow mb-4">
                @if (Model != null)
                {
                    <input hidden asp-for="Id" />
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <tbody>
                            <tr><td>Your application has been received.</td></tr>
                        <tr>
                                <td>
                                    Track its status with the following tracking number: <b style="color:green">
                                        @Model.ApplicationID.
                                    </b>
                                </td>
                        </tr>
                    </tbody>
                    </table>
                }
                else
                {
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <tbody>
                            <tr>
                                <td>No Record Found</td>
                            </tr>
                        </tbody>
                    </table>
                }
            </div>
        </form>
    </div>
</div>
