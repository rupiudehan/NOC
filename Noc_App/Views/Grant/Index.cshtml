@model GrantViewModel
@{
    // ViewBag.Title = "Application of Grant for NOC Detail";
    // Layout = "~/Views/HomeLanding/_HomeLayout.cshtml";
    ViewBag.Title = "Success";
    Layout = "~/Views/Shared/_LayoutSuccess.cshtml";
}
<h1> Congratulations!</h1>
@if (Model != null)
{
    <input hidden asp-for="Id" />
    <p>
        
        @if (Model.OrderId != "0")
        {
            @:"Your application has been received successfully. <br/>Payment has been done with transaction number "@Model.OrderId
        }
        else
        {
            @:"Your application has been received successfully, but payment is <b style="color:red">pending</b>"
        }
        <br /> Track its status with the following tracking number:<br />
        <b style="color:#76ac23">
            @Model.ApplicationID. <a asp-controller="Grant" asp-action="GeneratePdf" asp-route-Id="@Model.ApplicationID">Click here to download application</a>
        </b>
    </p>
    
    <br />
    <p>
        <a class="btn btn-secondary btn-user btn-block" asp-controller="HomeLanding" asp-action="Index">Back To Home</a>
    </p>
}else
{
    <p>Invalid request!</p>
}
