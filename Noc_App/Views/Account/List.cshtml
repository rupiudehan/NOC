@model IEnumerable<UserWithRolesViewModel>;
@{
    ViewBag.Title = "All Users";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Manage Users</h1>
</div>
<!-- Content Row -->
<div class="row">
    <div class="col-lg-12">
        <div class="card shadow mb-4">
            <div class="d-sm-flex align-items-center justify-content-between card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">List Of Users</h6>
                <a asp-controller="Account" asp-action="RegisterEmployee" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                    Add New
                </a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    @if (Model.Any())
                    {
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>UserName</th>
                                    <th>Email</th>
                                    <th>Role</th>
                                    <th>Division</th>
                                    <th>Sub-Division</th>
                                    <th>Tehsil/Block</th>
                                    <th>Village</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var data in Model)
                                {
                                    <tr>
                                        <td>@data.User.UserName</td>
                                        <td>@data.User.Email</td>
                                        <td>@string.Join(", ", @data.Roles)</td>
                                        @if (data.User.UserDivisions==null || @data.User.UserDivisions.Count <= 0)
                                        {
                                            <td></td>
                                        }
                                        else
                                        {
                                            <td>
                                                @{
                                                    string div = "";
                                                    foreach (var item in @data.User.UserDivisions)
                                                    {
                                                        if (!div.Contains(item.Division.Name))
                                                        {
                                                            div = div != "" ? div + "," + item.Division.Name : item.Division.Name;
                                                        }
                                                    }
                                                    @div
                                                }
                                                
                                            </td>
                                        }
                                        @if (@data.User.UserSubdivisions==null || @data.User.UserSubdivisions.Count <= 0)
                                        {
                                            <td></td>
                                        }
                                        else
                                        {
                                            <td>
                                            @{
                                                    string div = "";
                                                    foreach (var item in @data.User.UserSubdivisions)
                                                    {
                                                        if (!div.Contains(item.Subdivision.Name))
                                                        div = div != "" ? div + "," + item.Subdivision.Name : item.Subdivision.Name;
                                                    }
                                                    @div
                                                }
                                                
                                            </td>
                                        }
                                        @if (@data.User.UserTehsils==null || @data.User.UserTehsils.Count <= 0)
                                        {
                                            <td></td>
                                        }
                                        else
                                        {
                                            <td>
                                                @{
                                                    string div = "";
                                                    foreach (var item in @data.User.UserTehsils)
                                                    {
                                                        if (!div.Contains(item.Tehsil.Name))
                                                        div = div != "" ? div + "," + item.Tehsil.Name : item.Tehsil.Name;
                                                    }
                                                    @div
                                                }

                                            </td>
                                        }
                                        @if (@data.User.UserVillages==null || @data.User.UserVillages.Count <= 0)
                                        {
                                            <td></td>
                                        }
                                        else
                                        {
                                            <td>
                                                @{
                                                    string div = "";
                                                    foreach (var item in @data.User.UserVillages)
                                                    {
                                                        if (!div.Contains(item.Village.Name))
                                                        div = div != "" ? div + "," + item.Village.Name : item.Village.Name;
                                                    }
                                                    @div
                                                }

                                            </td>
                                        }
                                        <td>
                                            @if (string.Join(", ", @data.Roles) != "Administrator")
                                            {
                                                <a asp-action="Edit" asp-controller="Account" asp-route-id="@data.User.Id" class="btn btn-warning">Edit</a>
                                            }
                                        </td>
                                        <td>
                                            @if (string.Join(", ", @data.Roles) != "Administrator")
                                            {
                                                <form asp-action="DeleteUser" asp-route-userId="@data.User.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                                    <button class="btn btn-danger" type="submit">Delete</button>
                                                </form>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <tbody>
                                <tr>
                                    <td>No Record Found</td>
                                </tr>
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('.table').DataTable();
        });
    </script>
}