@model GrantApprovalDetailShortfall
@{
    ViewBag.Title = "Discrepancy";
}

<h1 class="h3 mb-4 text-gray-800">Discrepancy</h1>

<div class="row">

    <div class="col-lg-6">

        <!-- Circle Buttons -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Discrepancy</h6>
            </div>
            <div class="card-body">
                <form class="user" enctype="multipart/form-data" asp-action="ShortFall" method="post">
                    <input type="hidden" asp-for="id" />
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label for="SelectedGrantSectionIDs" class="control-label">Discrepancy In</label>
                                <select id="SelectedGrantSectionIDs" asp-for="SelectedGrantSectionIDs" multiple class="form-control">
                                    @foreach (GrantSectionsDetails sections in Model.GrantSectionsDetailsList)
                                    {
                                        <option value="@sections.Id">@sections.SectionName</option>
                                    }
                                </select>
                                <span asp-validation-for="SelectedGrantSectionIDs" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Remarks" class="control-label"></label>
                                <textarea asp-for="Remarks" class="form-control form-control-user" ></textarea>
                                <span asp-validation-for="Remarks" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="row">
                        <div class="col-lg-6">

                            <button type="submit" class="btn btn-danger btn-user btn-block">Submit</button>
                        </div>
                        <div class="col-lg-6">
                            <a class="btn btn-secondary btn-user btn-block" asp-controller="ApprovalProcess" asp-action="Index">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>



</div>
@section Scripts {
    <script src="~/modulejs/shortfalljs.js"></script>
}