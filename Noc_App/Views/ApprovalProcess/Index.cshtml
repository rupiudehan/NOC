                                                    {
                                                        <td>
                                                            @if (data.ProcessedToUser == null)
                                                            {
                                                                @:Unprocessed Application
                                                            }
                                                            else
                                                            {
                                                                @data.ProcessedToUser
                                                            }
                                                        </td>
                                                    }
                                                    else
                                                    {
                                                        <td>New Applied Application </td>
                                                    }
                                                    <td>
                                                        <a asp-action="ViewApplication" asp-controller="ApprovalProcess" asp-route-Id="@data.ApplicationID" class="btn btn-primary">View</a>
                                                    </td>
                                                    <td>
                                                        <a asp-action="Transfer" asp-controller="ApprovalProcess" asp-route-Id="@data.ApplicationID" class="btn btn-warning">Transfer</a>
                                                    </td>

                                                </tr>
                                                count = count + 1;
                                            }
                                        </tbody>
                                    </table>
                                }
                                else
                                {
                                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                        <tbody>
                                            <tr>
                                                <td>No Record Found</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                }
                            </div>
                        </div>
                        @if (arry[2] != null && arry[2].Any() && !arry[2].Any(x => x.LoggedInRole == "JUNIOR ENGINEER" || x.LoggedInRole == "SUB DIVISIONAL OFFICER"))
                        @* @if (Model.Any(x => x.LoggedInRole != "JUNIOR ENGINEER" && x.LoggedInRole != "SUB DIVISIONAL OFFICER")) *@
                        {
                            <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">
                                <div class="table-responsive">
                                    @if (arry[2] != null && arry[2].Any())
                                    {
                                        int @count = 1;
                                        <table class="table table-bordered" id="dataTableForwarded" width="100%" cellspacing="0">
                                            <thead>
                                                <tr>
                                                    <td>#</td>
                                                    <th>Application Id</th>
                                                    <th>Project Name</th>
                                                    <th>Location Details</th>
                                                    <th>Rejected By</th>
                                                    <th>View</th>

                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (GrantUnprocessedAppDetails data in arry[2])
                                                {
                                                    <tr>
                                                        <td>@count</td>
                                                        <td>@data.ApplicationID</td>
                                                        <td>@data.Name</td>
                                                        <td>@data.LocationDetails </td>
                                                        @if (data.LastForwardedByRole != "")
                                                        {
                                                            <td>
                                                                @if (data.LastForwardedByRole == null)
                                                                {
                                                                    @:Unprocessed Application
                                                                }
                                                                else
                                                                {
                                                                    @data.LastForwardedByRole
                                                                }
                                                            </td>
                                                        }
                                                        else
                                                        {
                                                            <td>New Applied Application </td>
                                                        }
                                                        <td>
                                                            <a asp-action="ViewApplication" asp-controller="ApprovalProcess" asp-route-Id="@data.ApplicationID" class="btn btn-primary">View</a>
                                                        </td>

                                                    </tr>
                                                    count = count + 1;
