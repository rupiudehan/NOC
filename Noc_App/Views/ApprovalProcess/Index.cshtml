                                                    @if (arry[0].Any(x => x.GrantApprovalDocId != 0))
                                                    {
                                                        <th>Edit</th>
                                                    }
                                                }
                                                <th>Forward</th>
                                                @if (arry[0].Any(x => (x.LoggedInRole == "EXECUTIVE ENGINEER" && x.LastForwardedByRole == "SUB DIVISIONAL OFFICER") || x.LoggedInRole == "CHIEF ENGINEER HQ"))
                                                {
                                                    <th>Issue NOC</th>
                                                    <th>Reject</th>
                                                }
                                                else if (arry[0].Any(x => x.LoggedInRole != "JUNIOR ENGINEER" && x.LoggedInRole != "SUB DIVISIONAL OFFICER"))
                                                {
                                                    <th>Reject</th>
                                                }

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (GrantUnprocessedAppDetails data in arry[0])
                                            {
                                                <tr>
