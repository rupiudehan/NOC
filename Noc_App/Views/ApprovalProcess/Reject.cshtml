@model GrantApprovalDetailReject
@{
    ViewBag.Title = "Reject Application";
}

<h1 class="h3 mb-4 text-gray-800">Reject Application</h1>

<div class="row">

    <div class="col-lg-6">

        <!-- Circle Buttons -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Are you sure you want to reject?</h6>
            </div>
            <div class="card-body">
                <form class="user" enctype="multipart/form-data" asp-action="Reject" method="post">
                    <input type="hidden" asp-for="id" />
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label asp-for="Remarks" class="control-label"></label><strong> (The same remarks shall be shared with the applicant)</strong>
                                <textarea asp-for="Remarks" class="form-control form-control-user" ></textarea>
                                <span asp-validation-for="Remarks" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="row">
                        <div class="col-lg-6">

                            <button type="submit" class="btn btn-danger btn-user btn-block" onclick="return confirm('Are you sure you want to reject?')" >Reject</button>
                        </div>
                        <div class="col-lg-6">
                            <a class="btn btn-secondary btn-user btn-block" asp-controller="ApprovalProcess" asp-action="Index">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>



</div>
