@model ApplicationStatusReportViewModel
@{
    // Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Application Status";
}


<h1 class="h3 mb-4 text-gray-800">Application Status</h1>
<div class="row">

    <div class="col-lg-12">
         <div id="divLoader" style="display:none;text-align:center"> <img src="~/images/ajax-loader.gif" alt="Loader" /> </div>
                <!-- Circle Buttons -->
            <div class="card shadow mb-4 drpd">
                <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Application Status</h6>
                </div>
                <div class="card-body">
                @if (Model != null)
                {
                    @if (Model.LoggedInRole.ToUpper() == "ADMINISTRATOR")
                    {
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <input type="hidden" asp-for="LoggedInRole" id="RoleName" />
                                    <input type="hidden" asp-for="hdnDivisionId" id="hdnDivisionId" />
                                    <label asp-for="SelectedDivisionId" class="control-label">Division</label>
                                    <select asp-for="SelectedDivisionId" id="SelectedDivisionId" asp-items="@Model.Divisions" class="form-control">
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="table-responsive" id="dvTable">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Application Id</th>
                                            <th>Date of Application</th>
                                            <th>Project Name</th>
                                            <th>Location Details</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody id="tbody">
                                        
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }
                }
                else
                {
                    @:No Record Found
                }
            </div>
            </div>
    </div>
</div>
@section Scripts {
    <script src="~/modulejs/applicationstatusscript.js"></script>
}

