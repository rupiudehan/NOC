                    <li><a class="nav-link scrollto @(IsLinkActive("Account","Login") ? "active" : "")" id="login" asp-action="login" asp-controller="Account">Department Login</a></li>
                    <li><a class="nav-link scrollto @(IsLinkActive("Grant","Create") ? "active" : "")" id="GrantCreate" asp-action="Create" asp-controller="Grant">Apply For NOC</a></li>
                    <li><a class="nav-link scrollto @(IsLinkActive("Grant","TrackStatus") ? "active" : "")" id="GrantTrackStatus" asp-action="TrackStatus" asp-controller="Grant">Track Status</a></li>
