@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/HomeLanding/_HomeLayout.cshtml";
}

<main id="main">
    <section id="contact" class="contact">
        <div class="container">

            <div class="section-title">
                <h2>Cart</h2>
            </div>

            <div class="row">

                <div class="col-lg-12 mt-5 mt-lg-0 d-flex align-items-stretch">
                    <div class="card shadow mb-12">
                        <div class="col-lg-12">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary">Cart</h6>
                            </div>
                            <div class="card-body">
                                <div class="row">

                                    <div class="col-md-12">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    @* <th>
                                                    @Html.DisplayName("Photo")
                                                    </th> *@

                                                    <th>
                                                        @Html.DisplayName("Name")
                                                    </th>
                                                    <th>
                                                        @Html.DisplayName("SiteAreaOrSizeInFeet")
                                                    </th>

                                                    <th>
                                                        @Html.DisplayName("Quantity")
                                                    </th>
                                                    <th>
                                                        @Html.DisplayName("SubTotal")
                                                    </th>

                                                </tr>
                                            </thead>
                                            <tbody id="myTable">
                                                @if (ViewBag.cart != null)
                                                {
                                                    @foreach (var item in ViewBag.cart)
                                                    {
                                                        <tr>
                                                            <td>
                                                                @item.Grant.Name
                                                            </td>
                                                            @* <td>
                                                    <img src="@("~/image/"+item.Pet.ImageName)" asp-append-version="true" width="50px" height="50px" />
                                                    </td> *@
                                                            <td>
                                                                @item.Grant.SiteAreaOrSizeInFeet
                                                            </td>
                                                            <td>
                                                                @item.Quantity
                                                            </td>
                                                            <td>
                                                                @(item.Grant.SiteAreaOrSizeInFeet * item.Quantity)
                                                            </td>
                                                        </tr>
                                                    }
                                                }
                                                else
                                                {
                                                    <tr>
                                                        <td colspan="4">No Record Found!</td>
                                                    </tr>
                                                }

                                                <tr>
                                                    <td align="right" colspan="4">
                                                        Sum
                                                    </td>
                                                    <td>
                                                        @ViewBag.total
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>

                                </div>
                                @* <a asp-controller="Pets" asp-action="Index" class="btn btn-sm btn-info">Continue Shoping</a> *@
                                <a asp-controller="Checkout" asp-action="Index" class="btn btn-sm btn-outline-success">Checkout</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>







